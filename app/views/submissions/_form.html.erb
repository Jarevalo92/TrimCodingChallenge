<%= bootstrap_form_for @submission, url:{action: "create"} do |f| %>

<%= f.alert_message "Please fix the errors below.",class:"alert" %>

<%=f.text_field :full_name, hide_label: true, placeholder: "FULL NAME" %>

<%=f.text_field :email, hide_label: true, placeholder: "EMAIL"%>

<%=f.text_field :project_repo, hide_label: true, placeholder: "PROJECT REPO"%>

<%=f.text_field :project_url, hide_label: true, placeholder: "PROJECT URL"%>

<%=f.text_field :using_best_practices_for_oop%>

<%=f.text_field :modular_development%>

<%=f.text_field :full_stack_workflow_understanding%>

<%=f.text_field :testing%>

<%=f.text_field :database_knowledge%>

<%=f.text_field :debugging%>

<%=f.text_field :problem_solving_skills%>

<%=f.text_field :javascript%>

<%=f.text_field :html %>

<%=f.text_field :css%>

<%=f.text_field :working_on_a_team%>

<%=f.text_field :self_motivation%>

<%=f.text_field :communication_skills%>

<%=f.text_field :your_own_energy_level%>

<%=f.text_field :intelligence_aptitude%>

<%=f.submit "SUBMIT", class:"btn-danger", style: "height:4em; width:100%; margin-top:1em;" %>
<% end %>
